{
  "name": "youtube-dl-gui",
  "version": "1.8.7",
  "description": "A GUI for the YouTube-dl library",
  "main": "main.js",
  "scripts": {
    "start": "electron . --dev",
    "dist": "electron-builder"
  },
  "keywords": [
    "youtube-dl",
    "electron",
    "download",
    "youtube",
    "gui",
    "interface"
  ],
  "author": {
    "name": "Jelle Glebbeek",
    "email": "contact@jelleglebbeek.com"
  },
  "license": "GPL-3.0-only",
  "devDependencies": {
    "electron": ">=10.1.0",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "electron-updater": "^4.3.4",
    "escape-string-regexp": "^4.0.0",
    "execa": "^4.0.0",
    "github-api": "^3.3.0",
    "jquery": "^3.5.1",
    "mkdirp": "^1.0.4",
    "popper.js": "^1.16.1",
    "request": "^2.88.2",
    "universalify": "^1.0.0",
    "windowbar": "^1.7.4",
    "yaml": "^1.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jely2002/youtube-dl-gui.git"
  },
  "build": {
    "afterPack": "./fix-linux-builds.js",
    "appId": "com.jelleglebbeek.youtube-dl-gui",
    "productName": "YouTube Downloader GUI",
    "copyright": "Copyright Â© 2020 Jelle Glebbeek",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "extraResources": [
        {
          "from": "resources",
          "to": "./",
          "filter": [
            "ffmpeg.exe",
            "youtube-dl.exe",
            "details",
            "downloading-icon.png",
            "done-icon.png"
          ]
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "identity": null,
      "extraResources": [
        {
          "from": "resources",
          "to": "./",
          "filter": [
            "ffmpeg",
            "youtube-dl-darwin",
            "details",
            "downloading-icon.png",
            "done-icon.png"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "target": "deb",
      "target": "rpm",
      "executableName": "youtube-dl-gui",
      "icon": "build/youtube-dl-gui.png",
      "synopsis": "A cross-platform GUI for youtube-dl",
      "category": "X-utility",
      "desktop": {
        "Name": "YouTube-DL-GUI",
        "Icon": "youtube-dl-gui",
        "Comment": "A cross-platform GUI for youtube-dl"
      },
      "extraResources": [
        {
          "from": "resources",
          "to": "./",
          "filter": [
            "ffmpeg-linux",
            "youtube-dl-darwin",
            "details",
            "downloading-icon.png",
            "done-icon.png"
          ]
        }
      ]
    }
  }
}
