{
  "name": "open-video-downloader",
  "version": "3.1.0",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jely2002/youtube-dl-gui.git"
  },
  "scripts": {
    "dev": "cross-env DEV=true vite",
    "build": "npm run build:app && npm run build:isolation",
    "build:app": "vue-tsc --noEmit && vite build",
    "build:isolation": "vue-tsc --noEmit && vite build --config vite.config.isolation.ts",
    "tauri": "tauri",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test": "npm run test:unit && npm run test:e2e",
    "manifest:gen": "node scripts/gen-manifest.ts",
    "manifest:sign": "node scripts/sign-manifest.ts",
    "manifest:verify": "node scripts/verify-manifest.ts",
    "manifest:fetch": "node scripts/fetch-sources.ts",
    "licenses:npm": "license-checker-rseidelsohn --production --json --out licenses/licenses-npm.json",
    "licenses:rust": "cargo about generate --manifest-path=src-tauri/Cargo.toml --output-file licenses/licenses-rust.txt src-tauri/about.hbs",
    "licenses:gen": "node scripts/licenses.ts",
    "licenses": "npm run licenses:npm && npm run licenses:rust && npm run licenses:gen"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@sentry/vue": "^10.26.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-global-shortcut": "^2.3.1",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "@tauri-apps/plugin-shell": "^2.3.3",
    "@tauri-apps/plugin-store": "^2.4.1",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "autoprefixer": "^10.4.23",
    "iso-639-1": "^3.1.5",
    "pinia": "^3.0.4",
    "tailwindcss": "^4.1.18",
    "uuid": "^13.0.0",
    "vue": "^3.5.26",
    "vue-i18n": "^11.2.1",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@intlify/eslint-plugin-vue-i18n": "^4.1.0",
    "@playwright/test": "1.57.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^24.10.4",
    "@types/unzipper": "^0.10.11",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "2.4.6",
    "cross-env": "^10.1.0",
    "daisyui": "^5.5.14",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.6.2",
    "jsdom": "^27.3.0",
    "license-checker-rseidelsohn": "^4.4.2",
    "monocart-coverage-reports": "^2.12.9",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.1",
    "unzipper": "^0.12.3",
    "vite": "^7.3.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "4.0.16",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.2.1"
  }
}
